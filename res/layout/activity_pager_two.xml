<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- 天气 -->

        <RelativeLayout
            android:id="@+id/layoutWeather"
            android:layout_width="@dimen/main_item_total_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/main_item_margin_right" >

            <ImageView
                android:layout_width="@dimen/main_item_image_width"
                android:layout_height="@dimen/main_item_image_height"
                android:contentDescription="@null"
                android:src="@drawable/main_item_weather" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_item_title_margin_left"
                android:layout_marginTop="@dimen/main_item_title_margin_top"
                android:text="@string/title_weather"
                android:textColor="@color/main_item_title_color"
                android:textSize="@dimen/main_item_title_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                android:background="?android:attr/selectableItemBackground" >

                <ImageView
                    android:id="@+id/imageWeatherInfo"
                    android:layout_width="@dimen/weather_info_icon_length"
                    android:layout_height="@dimen/weather_info_icon_length"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/weather_info_icon_margin_top"
                    android:contentDescription="@null"
                    android:src="@drawable/weather_sun" />

                <TextView
                    android:id="@+id/textWeatherInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageWeatherInfo"
                    android:layout_centerHorizontal="true"
                    android:text="未知"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_info_text_size" />

                <TextView
                    android:id="@+id/textWeatherTmpRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textWeatherInfo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/weather_temp_margin_top"
                    android:text="15~25℃"
                    android:textColor="#ade8ff"
                    android:textSize="@dimen/weather_temp_text_size" />

                <TextView
                    android:id="@+id/textWeatherCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textWeatherTmpRange"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/weather_city_margin_top"
                    android:drawableLeft="@drawable/weather_location"
                    android:text="未定位"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_city_text_size" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- FM发射 -->

        <RelativeLayout
            android:id="@+id/layoutFMTransmit"
            android:layout_width="@dimen/main_item_total_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/main_item_margin_right" >

            <ImageView
                android:layout_width="@dimen/main_item_image_width"
                android:layout_height="@dimen/main_item_image_height"
                android:contentDescription="@null"
                android:src="@drawable/main_item_fmtransmit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_item_title_margin_left"
                android:layout_marginTop="@dimen/main_item_title_margin_top"
                android:text="@string/title_fm_transmit"
                android:textColor="@color/main_item_title_color"
                android:textSize="@dimen/main_item_title_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                android:background="?android:attr/selectableItemBackground" >

                <ImageView
                    android:id="@+id/imageFMState"
                    android:layout_width="@dimen/fmtransmit_state_width"
                    android:layout_height="@dimen/fmtransmit_state_height"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fmtransmit_state_margin_bottom"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/main_item_state_play" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/imageFMState"
                    android:layout_centerHorizontal="true" >

                    <TextView
                        android:id="@+id/textFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108.5"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/fmtransmit_freq_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/textFrequency"
                        android:layout_below="@id/textFrequency"
                        android:text="MHz"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/fmtransmit_mhz_text_size" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!-- 文件管理 -->

        <RelativeLayout
            android:id="@+id/layoutFileManager"
            android:layout_width="@dimen/main_item_total_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/main_item_margin_right" >

            <ImageView
                android:layout_width="@dimen/main_item_image_width"
                android:layout_height="@dimen/main_item_image_height"
                android:contentDescription="@null"
                android:src="@drawable/main_item_filemanager" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_item_title_margin_left"
                android:layout_marginTop="@dimen/main_item_title_margin_top"
                android:text="@string/title_file_manager"
                android:textColor="@color/main_item_title_color"
                android:textSize="@dimen/main_item_title_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                android:background="?android:attr/selectableItemBackground" >

                <RelativeLayout
                    android:id="@+id/layoutUsage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/filemanager_usage_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/filemanager_usage_margin_top" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:src="@drawable/main_item_filemanager_circle_small" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:src="@drawable/main_item_filemanager_circle_big" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/file_left_hint_margin_top"
                        android:text="@string/file_left_hint"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/filemanager_usage_lsftstorage_hint_size" />

                    <TextView
                        android:id="@+id/textLeftStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/filemanager_usage_leftstorage_margin_top"
                        android:text="@string/file_left_default"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/filemanager_usage_leftstorage_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textLeftStorage"
                        android:layout_centerHorizontal="true"
                        android:text="@string/file_gb"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/filemanager_usage_lsftstorage_gb_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/filemanager_file_count_height"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/filemanager_file_count_margin_bottom" >

                    <ImageView
                        android:layout_width="@dimen/filemanager_file_count_bg_width"
                        android:layout_height="@dimen/filemanager_file_count_bg_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/main_item_filemanager_file_bg" />

                    <TextView
                        android:id="@+id/textTotalStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/file_total_default"
                        android:textColor="@color/file_total_text_color"
                        android:textSize="@dimen/filemanager_file_count_text_size" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <!-- 多媒体 -->

                <RelativeLayout
                    android:id="@+id/layoutMultimedia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/main_item_margin_right"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/main_item_image_width"
                        android:layout_height="@dimen/main_item_image_height"
                        android:contentDescription="@null"
                        android:src="@drawable/main_item_multimedia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_item_title_margin_left"
                        android:layout_marginTop="@dimen/main_item_title_margin_top"
                        android:text="@string/title_multimedia"
                        android:textColor="@color/main_item_title_color"
                        android:textSize="@dimen/main_item_title_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                        android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                        android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                        android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                        android:background="?android:attr/selectableItemBackground" >
                    </RelativeLayout>
                </RelativeLayout>
                <!-- 微信助手 -->

                <RelativeLayout
                    android:id="@+id/layoutWechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/main_item_margin_right"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/main_item_image_width"
                        android:layout_height="@dimen/main_item_image_height"
                        android:contentDescription="@null"
                        android:src="@drawable/main_item_wechat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_item_title_margin_left"
                        android:layout_marginTop="@dimen/main_item_title_margin_top"
                        android:text="@string/title_wechat"
                        android:textColor="@color/main_item_title_color"
                        android:textSize="@dimen/main_item_title_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                        android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                        android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                        android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                        android:background="?android:attr/selectableItemBackground" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <!-- 微密 -->

                <RelativeLayout
                    android:id="@+id/layoutWeme"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/main_item_margin_right"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/main_item_image_width"
                        android:layout_height="@dimen/main_item_image_height"
                        android:contentDescription="@null"
                        android:src="@drawable/main_item_weme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_item_title_margin_left"
                        android:layout_marginTop="@dimen/main_item_title_margin_top"
                        android:text="@string/title_weme"
                        android:textColor="@color/main_item_title_color"
                        android:textSize="@dimen/main_item_title_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                        android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                        android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                        android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                        android:background="?android:attr/selectableItemBackground" >
                    </RelativeLayout>
                </RelativeLayout>
                <!-- 微密 -->

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/main_item_margin_right"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="@dimen/main_item_image_width"
                        android:layout_height="@dimen/main_item_image_height"
                        android:contentDescription="@null"
                        android:src="@drawable/main_item_weme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/main_item_title_margin_left"
                        android:layout_marginTop="@dimen/main_item_title_margin_top"
                        android:text="@string/title_weme"
                        android:textColor="@color/main_item_title_color"
                        android:textSize="@dimen/main_item_title_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/main_item_center_point_margin_bottom"
                        android:layout_marginLeft="@dimen/main_item_center_point_margin_left"
                        android:layout_marginRight="@dimen/main_item_center_point_margin_right"
                        android:layout_marginTop="@dimen/main_item_center_point_margin_top"
                        android:background="?android:attr/selectableItemBackground" >
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>